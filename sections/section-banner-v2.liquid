<div class="section-banner-v2-wrapper mt-all ms-auto me-auto {% if section.settings.show_full_mobile %} full-width{% endif %}"
     data-section-id="{{ section.id }}" data-section-type="section-banner-v2"
     style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{% endif %} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
    {% if section.settings.heading != blank or section.settings.sub_heading != blank %}
        <div class="banner-heading-container">
            <div class="row pb-1 pb-md-0 mb-4 mb-md-5">
                {% if section.settings.heading != blank %}
                    <h1 class="title_heading text-center pb-1 pb-md-0 mb-3 mb-sm-3 fw-normal text-uppercase"
                        style="color: {{ section.settings.heading_color }}; {% if section.settings.heading_font_size != blank %}font-size: {{section.settings.heading_font_size}}px;{% endif %}">{{ section.settings.heading }}</h1>
                {% endif %}
                {% if section.settings.sub_heading != blank %}
                    <p class="text-center mb-0"
                       style="color: {{ section.settings.sub_heading_color }}; {% if section.settings.sub_heading_font_size != blank %}font-size: {{section.settings.sub_heading_font_size}}px;{% endif %}">{{ section.settings.sub_heading }}</p>
                {% endif %}
            </div>
        </div>
    {% endif %}
    <div class="section-banner-v2">
        <div class="lazyload">
            <div class="banner-box">
                <div class="box-img-banner">
                    <a href="{{ section.settings.url_button1 }}">
                        {% if section.settings.img_banner1 != blank %}
                            <img data-src="{{ section.settings.img_banner1 | img_url: 'master' }}"
                                 class="lazyload img-fluid w-100 d-none d-md-block">
                        {% else %}
                            <img data-src="//via.placeholder.com/1920x850" class="lazyload img-fluid w-100 d-none d-md-block"
                                 alt="banner">
                        {% endif %}
                        {% if section.settings.img_banner1_mobile != blank %}
                            <img data-src="{{ section.settings.img_banner1_mobile | img_url: 'master' }}"
                                 class="lazyload img-fluid w-100 d-block d-md-none" alt="">
                        {% else %}
                            <img data-src="{{ section.settings.img_banner1 | img_url: 'master' }}"
                                 class="lazyload img-fluid w-100 d-block d-md-none" alt="">
                        {% endif %}
                    </a>
                </div>
                <div class="banner-info {% if section.settings.select_pos == 'left' %}content-left{% elsif section.settings.select_pos == 'right' %}content-right{% elsif section.settings.select_pos == 'center' %}content-center{% endif %}">
                    {% if section.settings.title_banner != blank %}
                        <h3 class="title mb-0"
                            style="color:{{ section.settings.color_title }}">{{ section.settings.title_banner }}</h3>
                    {% endif %}
                    {% if section.settings.sub_title != blank %}
                        <p class="sub-title mb-3 mb-lg-2"
                           style="color: {{ section.settings.color_sub_title }}">{{ section.settings.sub_title }}</p>
                    {% endif %}
                    {% if section.settings.button_1 != blank %}
                        <a href="{{ section.settings.url_button1 }}"
                           class="button-shop text-center text-decoration-none text-white">{{ section.settings.button_1 }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
