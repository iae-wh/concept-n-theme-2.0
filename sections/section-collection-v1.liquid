<div data-section-id="{{ section.id }}" data-section-type="section-collection-v1"
     style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{% endif %} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{ section.settings.sections_bg_color }};{% endif %}">
    <div class="section-collection-v1 mt-all">
        <div>
            <div class="px-2 pb-1 pb-md-0 mb-4 mb-md-5">
                {% if section.settings.title_heading != blank %}
                    <h1 class="title_heading text-center pb-1 pb-md-0 mb-3 mb-sm-3 fw-normal"
                        style="color: {{ section.settings.heading_color }}; {% if section.settings.heading_font_size != blank %}font-size: {{section.settings.heading_font_size}}px;{% endif %}">
                        {{ section.settings.title_heading }}
                    </h1>
                {% endif %}
                {% if section.settings.title_sub_heading != blank %}
                    <p class="text-center mb-0"
                       style="color: {{ section.settings.sub_heading_color }}; {% if section.settings.sub_heading_font_size != blank %}font-size: {{section.settings.sub_heading_font_size}}px;{% endif %}">{{ section.settings.title_sub_heading }}</p>
                {% endif %}
            </div>
            <div class="container container-v2">
                <div class="row no-gutters js-collection-v1">
                    {% if section.blocks.size > 0 %}
                        {% for block in section.blocks %}
                            {% if block.type == 'colection' %}
                                <div class="col-lg-4 col-md-4 col-sm-6 col-12 col-item">
                                    <div data-block-id="{{ block.id }}" class="item">
                                        <div class="">
                                            <div>
                                                {% if block.settings.brand_img != blank %}
                                                    <img data-src="{{ block.settings.brand_img | img_url: 'master' }}"
                                                         class="lazyload img-fluid w-100" alt="collection">
                                                {% else %}
                                                    <img data-src="https://via.placeholder.com/456x600"
                                                         class="lazyload img-fluid w-100" alt="collection">
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="category-info">
                                            <div class="box-info d-flex flex-column align-items-center">
                                                {% if block.settings.block_content != blank %}
                                                    <p class="sub_heading mb-3">
                                                        {{ block.settings.block_content }}
                                                    </p>
                                                {% endif %}
                                                {% if block.settings.button_text != blank %}
                                                    <a href="{{ block.settings.brand_url}}"
                                                       class="button-shop text-center text-decoration-none">{{ block.settings.button_text }}</a>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <style>
                                        [data-block-id="{{ block.id }}"] .sub_heading {
                                            color: {{ block.settings.text_color }};
                                        }
                                        [data-block-id="{{ block.id }}"] .button-shop {
                                            color: {{ block.settings.button_color }};
                                            background-color: {{ block.settings.button_background }};
                                            border: 1px solid {{ block.settings.button_border }};
                                        }
                                        [data-section-id="{{ section.id }}"] .button-shop:hover {
                                            color: {{ block.settings.button_color_hover }};
                                            background-color: {{ block.settings.button_background_hover }};
                                            border: 1px solid {{ block.settings.button_border_hover }};
                                        }
                                    </style>
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

