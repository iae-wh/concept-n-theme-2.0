{% if section.settings.select_fts == "footer_v4" or section.settings.select_fts_all == "footer_ver4" %}
    {{ 'footer.js' | asset_url | script_tag }}
    <footer class="footer_v4" style="background-color : {{ section.settings.ft_home_bg_footer }}">
        <div class="top-footer">
            <div class="container container-v1 ps-2 pe-2 ps-md-4 pe-md-4 ps-lg-5 pe-lg-5">
                <div class="row ms-0 me-0">
                    <div class="row ms-0 me-0 col-12 col-lg-8 js-menu-mobile">
                        <div class="col-12 col-sm-4">
                            <div class="info_footer">
                                <div class="title_footer">
                                    <h4 class="mb-0 mb-md-1 fs-6 title_border">{{ settings.titlecolum_fv4_1 }}</h4>
                                    <i class="d-block d-md-none fa-solid fa-chevron-down"></i>
                                </div>
                                <ul class="list-link list-unstyled mb-0">
                                    {% for link in linklists[settings.menu_fv4_1].links %}
                                        <li><a class="text-decoration-none" href="{{ link.url }}"
                                               title="{{ link.title }}">{{ link.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="info_footer">
                                <div class="title_footer">
                                    <h4 class="mb-0 mb-md-1 fs-6 title_border">{{ settings.titlecolum_fv4_2 }}</h4>
                                    <i class="d-block d-md-none fa-solid fa-chevron-down"></i>
                                </div>
                                <ul class="list-link list-unstyled mb-0">
                                    {% for link in linklists[settings.menu_fv4_2].links %}
                                        <li><a class="text-decoration-none" href="{{ link.url }}"
                                               title="{{ link.title }}">{{ link.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="info_footer info_contact">
                                <div class="title_footer ">
                                    <h4 class="mb-0 mb-md-1 fs-6 title_border">{{ settings.titlecolum_fv4_3 }}</h4>
                                    <i class="d-block d-md-none fa-solid fa-chevron-down"></i>
                                </div>
                                <ul class="list-link list-unstyled mb-0">
                                    {% for link in linklists[settings.menu_fv4_3].links %}
                                        <li><a class="text-decoration-none" href="{{ link.url }}"
                                               title="{{ link.title }}">{{ link.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        {% comment %}
                        <div class="col-lg-3 col-md-6">
                            <div class="info_footer info_contact">
                                <div class="title_footer ">
                                    <h4 class="mb-0 mb-md-1 title_border">{{ settings.titlecolum_fv4_4 }}</h4>
                                </div>
                                {% if settings.content_colum_fv4_5_1 != blank %}
                                    {{ settings.content_colum_fv4_5_1 }}
                                {% else %}
                                    <ul class="list-unstyled mb-0">

                                        <li><a href="tel:(646)663-4575" title="Phone: (646) 663-4575"><i
                                                    class="mr-2 fa fa-phone "></i>(646) 663-4575</a></li>

                                        <li><a href="tel:(646)968-0608" title="Fax: (646) 968-0608"><i
                                                    class="mr-2 fa fa-fax "></i>(646) 968-0608</a></li>

                                        <li><a href="mailto:help@engotheme.com" title="Mail : help@engotheme.com"><i
                                                    class=" mr-2 fa fa-envelope "></i>help@engotheme.com</a></li>

                                        <li><a href="/" title="Address : 1201 Broadway Suite 600 New York"><i
                                                    class="mr-2 fa fa-location-arrow"></i>1201 Broadway Suite
                                                600</a></li>

                                    </ul>
                                {% endif %}

                                <div class="mt-3">
                                    {{ settings.content_colum_fv4_5 }}
                                </div>

                            </div>
                        </div>
                        {% endcomment %}
                    </div>
                    <div class="row ms-0 me-0 justify-content-center justify-content-sm-start col-12 col-lg-4">
                        <div class="info_footer d-flex flex-column end">
                            <div class="title_footer d-none">
                                <h4 class="mb-2 fs-6 title_border">{{ settings.titlecolum_fv4_5 }}</h4>
                            </div>
                            {% if settings.content_colum_fv4_4 != blank %}
                                <p class="mb-md-2 content_footer">{{ settings.content_colum_fv4_4 }}</p>
                            {% endif %}

                            {% if settings.newsletter_form_action != blank %}
                                {% assign form_action = settings.newsletter_form_action %}
                            {% else %}
                                {% assign form_action = '#' %}
                            {% endif %}
                            <form class="needs-validation fv4-form mb-md-3" action="{{ form_action }}" method="post">
                                <div class="mb-0">
                                    <input type="email" name="EMAIL" class="bg-white text-input"
                                           placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}">
                                </div>
                                <button class="btn"
                                        type="submit">{{ 'general.newsletter_form.submit_footer' | t }}</button>
                            </form>
                            {{ settings.content_colum_fv4_5 }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if settings.enable_fv4_bottom %}
            <div class="copyright pt-3 pb-md-3">
                <div class="container container-v1 ps-2 pe-2 ps-md-4 pe-md-4 ps-lg-5 pe-lg-5">
                    <div class="row row-gap-1 align-items-center mb-5 mb-sm-0 ms-0 me-0">
                        <div
                            class="col-lg-6 col-md-6 {% if settings.enable_rtl_mode %}text-center text-lg-right text-md-right {% else %}text-center text-lg-left text-md-left{% endif %}">
                            {% if settings.fv4_bottom_copyright != blank %}
                                <p class="ps-md-4 text-copyright mb-0">{{ settings.fv4_bottom_copyright }}</p>
                            {% else %}
                                <div class="text-copyright mb-0"><p>Â© Copyright 2021 | <a href="#"> FivoStore </a>
                                        By <a href="http://engotheme.com/" rel="nofollow" target="_blank"
                                              class="underline_hover link"> EngoTheme</a>.<a
                                            href="https://www.shopify.com/?ref=shopifycenter" rel="nofollow"
                                            target="_blank" class=""> Powered by Shopify.</a></p>
                                </div>
                            {% endif %}
                        </div>
                        <div
                            class="d-flex justify-content-center justify-content-md-end col-lg-6 col-md-6 {% if settings.enable_rtl_mode %} text-lg-left text-md-left {% else %}text-lg-right text-md-right {% endif %}">
                            {% if settings.fv4_bottom_payment_img != blank %}
                                <img class="object-fit-contain"
                                     src="{{ settings.fv4_bottom_payment_img | img_url: 'master' }}"
                                     style="height: 32px;" alt="">
                            {% else %}
                                <img class="ms-lg-auto" src="//via.placeholder.com/247x23" alt="">
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

    </footer>
    {% unless template contains 'index' %}
        <style>
            .footer_v4 .top-footer .title_footer h4 {
                color: {{section.settings.ft_other_color_text}};
            }

            .footer_v4 .top-footer .info_footer ul li a {
                color: {{section.settings.ft_other_color_text}};
            }

            .footer_v4 .top-footer .content_footer {
                color: {{section.settings.ft_other_color_text}};
            }
        </style>
    {% else %}
        <style>
            .footer_v4 .top-footer .title_footer h4 {
                color: {{section.settings.ft_home_color_text}};
            }

            .footer_v4 .top-footer .info_footer ul li a {
                color: {{section.settings.ft_home_color_text}};
            }

            .footer_v4 .top-footer .content_footer {
                color: {{section.settings.ft_home_color_text}};
            }
        </style>
    {% endunless %}
{% endif %}
<style>
    .footer_v4 .top-footer,
    .footer_v4 .copyright {
        max-width: 1600px;
        margin: 0 auto;
    }
</style>
